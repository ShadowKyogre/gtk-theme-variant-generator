style "toolbar" = "toolbar-item"
{
	engine "pixmap"
	{
		image {
			function = BOX
		#	file = "toolbar_light.png"
			border = {1,1,1,1}
		}
		image {
			function       = HANDLE
			overlay_file   = "handlebox.png"
			overlay_stretch= FALSE
			orientation    = HORIZONTAL
		}
        image {
			function        = HANDLE
			overlay_file    = "handlebox.png"
			overlay_stretch = FALSE
			orientation     = VERTICAL
		}
		image
		{
			function    = VLINE
			recolorable = TRUE
			file        = "blank.png"
		}
		image
		{
			function     = HLINE
			recolorable  = TRUE
			file         = "blank.png"
		}
    }
}


